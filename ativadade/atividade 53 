import os
from dataclasses import dataclass

os.system("cls || clear")

@dataclass
class Pessoa:
    nome: str
    idade: int
    peso: float
    altura: float


pessoa1 = Pessoa("Kayky", 20, 70.5, 1.75)
pessoa2 = Pessoa("Samira", 19, 60.0, 1.65)


print("\n= Dados da Pessoa =")
print(f"Nome: {pessoa1.nome}, Idade: {pessoa1.idade}, Peso: {pessoa1.peso} kg, Altura: {pessoa1.altura} m")
print(f"Nome: {pessoa2.nome}, Idade: {pessoa2.idade}, Peso: {pessoa2.peso} kg, Altura: {pessoa2.altura} m")